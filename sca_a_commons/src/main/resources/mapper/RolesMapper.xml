<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!-- namespace,指定要实现的接口 全限定名 -->
<mapper namespace="com.xiao.mapper.RolesMapper">

    <select id="getRoelesName" parameterType="java.lang.String"  resultType="java.lang.String">
        select role_name from sys_roles where user_id = #{userId}
    </select>

</mapper>
